{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Warning"
    },
    "Console": {
      "Default": "Warning",
      "Microsoft": "Error",
      "mcy.Tools.*": "Information"
    }
  },
  "Archive":{
    "ArchiveLogFileTypes": [
      {
        "LogFileType": "IIS",
        "FileNamePattern": "(u_ex)([0-9]{6})\\.(log)",
        "DatePosition": 2
      },
      {
        "LogFileType": "SplashPageManager",
        "FileNamePattern": "(splash[0-9_]+\\.log)(20[0-9]{4})",
        "DatePosition": 2
      },
      {
        "LogFileType": "ApiMoneyDesktop",
        "FileNamePattern": "(moneydesktop\\.log\\.)(20[0-9-]{8})(\\.[0-9]+)?",
        "DatePosition": 2
      },
      {
        "LogFileType": "SmsItsMe",
        "FileNamePattern": "(TextBanking[0-9_]+\\.log\\.)(20[0-9]{6})\\.(log)",
        "DatePosition": 2
      }
    ],
    "PathTo7zip": "C:\\usr\\bin\\7zip\\7z.exe",
    "NumberOfDaysToKeepFiles": 14, // How many days of logs should remain unarchived?
    "ArchiveFileNameMonthOffset": 0 // Used in naming the archive file. Zero means use the current month. -1 will use the previous month. etc...
  },
  "ArchiveCallsToInvoke":[
    {
      "LogFileType": "IIS",
      "BasePath": "D:\\Logs", // Optional
      "Directories": [
        1,2,3,4,5,6,1010,1020,1040,1050,1055,1060,1070,1090,1100,1110,1120,1130,1200,2000,2050,3000
      ]
    },
    {
      "LogFileType": "SmsItsMe",
      "Directories": ["D:\\Logs\\sms.itsme247.com", "D:\\Logs\\bizlink247.com"]
    }
  ]
}
